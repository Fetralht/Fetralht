<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
  body {
      background-color: #f8f9fa;
  }
  .card {
      border-radius: 15px;
      transition: transform 0.3s ease-in-out;
  }
  .card:hover {
      transform: scale(1.02);
  }
  .btn-danger {
      transition: background-color 0.3s ease-in-out;
  }
  .btn-danger:hover {
      background-color: #dc3545;
      opacity: 0.8;
  }
  h3, h4 {
      color: #343a40;
  }
  a {
      color: #007bff;
  }
  a:hover {
      text-decoration: underline;
  }
</style>
<div class="container mt-5">
  <div class="card shadow-lg p-4">
      <h3 class="text-center mb-4">Upload Image</h3>
      <form method="POST" action="/upload" enctype="multipart/form-data" class="needs-validation" novalidate>
          <div class="mb-3">
              <label for="image" class="form-label">Choose Image</label>
              <input type="file" class="form-control" name="image" id="image" required>
              <div class="invalid-feedback">Please select a file.</div>
          </div>
          <div class="d-grid">
              <button type="submit" class="btn btn-primary">Upload</button>
          </div>
      </form>
  </div>
  <div class="mt-5">
      <h4 class="text-center">Uploaded Images</h4>
      <% images.forEach(function (image){ %>
      <div class="card mb-3">
          <div class="card-body d-flex justify-content-between align-items-center">
              <a href="/image/<%= image._id %>" class="text-decoration-none">
                  <%= image.name %>
              </a>
              <button class="btn btn-danger">Delete</button>
          </div>
      </div>
      <% }) %>
  </div>
</div>